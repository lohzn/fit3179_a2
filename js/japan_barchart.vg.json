{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lohzn/fit3179_a2/main/data/earthquake_counts.csv"
  },
  "width": "container",
  "height": 540,
  "layer": [
    {
      "title": {
        "text": "Earthquake Monthly Frequency Bar Chart",
        "anchor": "middle",
        "color": "#333333",
        "fontSize": 24
      },
      "mark": {
        "type": "bar",
        "tooltip": true,
        "cursor": "pointer",
        "color": "#0093af",
        "stroke": "black",
        "strokeWidth": 1,
        "strokeOpacity": 0.5,
        "cornerRadius": 2
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "ordinal",
          "sort": [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
          ],
          "title": "Month"
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "axis": { "title": "Number of Earthquakes" }
        },
        "opacity": {
          "condition": {
            "param": "filter",
            "value": 1
          },
          "value": 0.3
        },
        "tooltip": [
          { "field": "date", "type": "ordinal" },
          { "field": "count", "type": "quantitative" }
        ]
      },
      "params": [
        {
          "name": "filter",
          "select": {
            "type": "point",
            "fields": ["date"]
          },
          "bind": {
            "input": "select",
            "options": [
              null,
              "January",
              "February",
              "March",
              "April",
              "May",
              "June",
              "July",
              "August",
              "September",
              "October",
              "November",
              "December"
            ],
            "name": "Filter by Month"
          }
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dx": 250,
        "dy": 15,
        "fontSize": 12,
        "fontWeight": "normal",
        "color": "red",
        "fontStyle": "italic",
        "font": "Arial"
      },
      "encoding": {
        "text": {
          "value": "September had most earthquakes throughout 2016 to 2018"
        },
        "x": { "value": 120 },
        "y": { "value": 10 }
      }
    }
  ]
}
