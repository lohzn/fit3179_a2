{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lohzn/fit3179_wk9_hw/main/data/jpn_eq_16_18.csv"
  },
  "width": "container",
  "height": 600,
  "transform": [
    { "calculate": "year(datum.time)", "as": "year" },
    { "filter": "datum.depth <= 250" }
  ],
  "title": {
    "text": "Magnitude vs Depth",
    "anchor": "middle",
    "color": "#333333",
    "fontSize": 24
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "depth",
      "type": "quantitative",
      "bin": true,
      "title": "Depth (km)",
      "scale": {
        "domain": [0, 250]
      }
    },
    "y": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "scale": {
        "domain": [2018, 2017, 2016]
      }
    },
    "color": {
      "field": "mag",
      "type": "quantitative",
      "aggregate": "max",
      "title": "Magnitude (Richter scale)",
      "scale": {
        "domain": [4.4, 8]
      }
    }
  }
}
