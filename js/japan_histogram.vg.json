{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lohzn/fit3179_wk9_hw/main/data/jpn_eq_16_18.csv"
  },
  "width": "container",
  "height": 400,
  "title": {
    "text": "Distribution of Earthquake Magnitudes",
    "anchor": "middle",
    "color": "#333333",
    "fontSize": 24
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "mag",
      "type": "quantitative",
      "bin": true,
      "title": "Magnitude (Richter scale)"
    },
    "y": {
      "type": "quantitative",
      "aggregate": "count",
      "title": "Number of Earthquakes"
    },
    "tooltip": [
      {
        "field": "mag",
        "type": "quantitative",
        "bin": true,
        "title": "Magnitude (Richter scale)"
      },
      {
        "type": "quantitative",
        "aggregate": "count",
        "title": "Number of Earthquakes"
      }
    ]
  }
}
